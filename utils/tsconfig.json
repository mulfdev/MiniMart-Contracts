{
    "compilerOptions": {
        "target": "ES2022",
        "noUncheckedIndexedAccess": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
